# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Development Configuration
EXPO_PUBLIC_ENVIRONMENT=development

# Feature Flags (for gradual rollout)
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# API Configuration
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=3

# Content Configuration
EXPO_PUBLIC_MAX_CHAPTER_PAGES=10
EXPO_PUBLIC_DEFAULT_LANGUAGE=en

# Security Configuration (for production)
# EXPO_PUBLIC_ENABLE_SECURITY_LOGGING=true
# EXPO_PUBLIC_REQUIRE_ENCRYPTION=true